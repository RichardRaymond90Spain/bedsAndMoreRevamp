/* Mobile viewport standards - MUST BE FOLLOWED BY ALL COMPONENTS */
@media screen and (max-width: 600px) {
  /* Core viewport rules - mandatory */
  .viewport-fit {
    min-height: 100vh;
    width: 100%;
    overflow-x: hidden;
    padding: 0;
  }

  /* Container spacing rules */
  .mobile-container {
    padding-left: 0;
    padding-right: 0;
  }

  /* Content spacing standards */
  .mobile-content {
    padding-top: 8px;
    padding-left: 16px;
    padding-right: 16px;
  }

  /* Vertical spacing between sections */
  .mobile-section {
    margin-bottom: 16px;
  }

  /* Text standards for mobile */
  .mobile-text {
    font-size: 0.875rem;
    line-height: 1.4;
  }

  /* Image container standards */
  .mobile-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
}

/* Standard rules for all components */
.standard-rules {
  /* Prevent horizontal scroll on all screen sizes */
  overflow-x: hidden;
  width: 100%;
  
  /* Maintain content within viewport */
  max-width: 100%;
  box-sizing: border-box;
  
  /* Standard spacing */
  padding: 0;
  margin: 0;
} 